<?xml version="1.0" encoding="UTF-8"?>
<project basedir=".." name="SALVADOR.COMPASS" xmlns:artifact="antlib:org.apache.maven.artifact.ant">
    <description>Compass targets of the SUB Ant library</description>
    
    <!-- Import base lib -->
    <import file="../build.xml"/>
    <!-- Compass depends on JRuby -->
    <import file="./jruby.xml"/>
    
    <property name="salvador.compass.lib.dir" value="${salvador.base.lib.dir}/compass"/>
    
    <target name="salvador.compass.check.gem" depends="salvador.jruby.download">
        <salvador.jruby.gem.check gem="compass"/>
    </target>
    
    <target name="salvador.compass.check.gem.return" depends="salvador.compass.check.gem">
        <condition property="compass.gem.exists">
            <equals arg1="${salvador.jruby.gem.check.return.code}" arg2="0"/>
        </condition>
    </target>
    
    <target name="salvador.compass.gem.download" depends="salvador.jruby.gems" unless="salvador.compass.gem.exists">
        <salvador.jruby.gem.install gem="compass"/>
    </target>
    
    
    
    <target name="salvador.compass.install" depends="salvador.compass.gem.download"></target>
    
</project>